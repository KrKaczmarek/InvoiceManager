            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DuckId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.DuckId, Model.DuckList, "--Select--")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
