                @Html.DropDownListFor(m => m.RecipientId, Model.RecipientList, "--Select--")
           
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SupplierId, htmlAttributes: new { @class = "control-label col-md-2" })
